main(n){
    var i, r;
    r = 0;
    while(n > i){
        r = r + jam(n);
        i = i + 1;
    }
    return r;
}

jam(n){
 var j, k;
 j = 0;
 while(n > j){
    k = j;
    while(k > 1){
      k = collatz(k);
    }
    j = j + 1;
 }
 return k;
}

collatz(a){
  if(a / 2 * 2 == a){
    a = a / 2;
  }
  else{
    a = 3 * a + 1;
  }
 return a;
}
