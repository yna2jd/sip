/*
 * Benchmark for loop rotating optimization.
 *
 * Compile with and without the -rot optimization then run:
 *   time ./rotate 20000
 * to observe the execution time of the benchmark.
 * You should be able to see a 2x speedup with loop rotation.
 */

main(n){
    var i, r, e;
    i = 0;
    if(0 > n) n = 2;
    while(n > i){
       r = r + rotate(i);
       i = i + 1;
    }
    return r;
}

